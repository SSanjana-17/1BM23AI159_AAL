#include <stdio.h>
#include <stdlib.h>
#include <time.h>
int main()
{
	int n;
	int i;
	int j;
	int temp;
	int min;
	clock_t start_time = clock();
	clock_t end_time = clock();
	
printf("Enter the number of elements: ");
scanf("%d", &n);
int *a = (int *)malloc(n * sizeof(int));
if (a == NULL) {
	printf("Memory allocation failed\n");
	return 1;
}
printf("Enter the elements of the array: ");
for (i = 0; i < n; i++) {
	scanf("%d", &a[i]);
	}
for( i =0;i<n;i++){
	min =i;
	for(j = i+1;j<n;j++){
		if(a[min] > a[j]){
		min = j;\
		}
	}
	temp = a[i];
	a[i] = a[min];
	a[min] = temp;
}


double time_taken = ((double)(end_time - start_time))/CLOCKS_PER_SEC;

printf("Sorted Array:\n");
for(i=0;i<n;i++){
	printf("%d ",a[i]);
}

printf("\n");
printf("Time Taken in seconds: %f\n", time_taken);
free(a);
return 0;
}

output:
Enter the number of elements: 6
Enter the elements of the array: 2
8
9
3
4
7
Sorted Array: 
2 3 4 7 8 9
Time taken in seconds: 0.00000
